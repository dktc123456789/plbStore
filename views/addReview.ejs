<form action="/rev/addReview" method="POST">
    <h1 class="mt-5">Form bình luận</h1>
    <div class="form-group">
        <p>BÌNH LUẬN</p>
        <textarea name="review" cols="34" rows="7"></textarea>  
    </div>

    <div class="form-group">
        <p>ĐIỂM ĐÁNH GIÁ</p>
        <input type="radio" name="avgScore" value="5.0">
        <label for="p1">5.0 - 5.0</label><br>
        <input type="radio" name="avgScore" value="6.0">
        <label for="age2">6.0 - 6.0</label><br>  
        <input type="radio" name="avgScore" value="7.0" checked>
        <label for="age3">7.0 - 7.0</label><br><br>
    </div>
    <input class="btn btn-primary mb-5" type="submit" value="Gửi đánh giá">
</form> 